{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des articles</h1>

        <a href="{{ path('app_article_new') }}" class="btn btn-primary mb-3">Créer un nouvel article</a>

        <div class="row">
            {% for article in articles %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text">{{ article.contenu|slice(0, 100) }}...</p>
                            <div class="mb-2">
                                {% for category in article.categories %}
                                    <span class="badge bg-secondary">{{ category.nom }}</span>
                                {% endfor %}
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p>Aucun article trouvé</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
