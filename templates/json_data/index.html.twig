{% extends 'base.html.twig' %}

{% block title %}Liste des Posts{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Liste des Posts</h1>
            
            {% if error %}
                <div class="alert alert-danger">
                    <strong>Erreur:</strong> {{ error }}
                </div>
            {% endif %}

            {% if success and posts %}
                <div class="mb-3">
                    <span class="badge bg-primary">{{ posts|length }} posts trouvés</span>
                </div>
                
                <div class="row">
                    {% for post in posts %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <a href="{{ path('app_posts_show', {'id': post.id}) }}" class="text-decoration-none">
                                            {{ post.title|title }}
                                        </a>
                                    </h5>
                                    <p class="card-text flex-grow-1">
                                        {{ post.body|slice(0, 120) }}
                                        {% if post.body|length > 120 %}...{% endif %}
                                    </p>
                                    <div class="mt-auto">
                                        <small class="text-muted">
                                            <i class="bi bi-person"></i> Utilisateur {{ post.userId }} | 
                                            <i class="bi bi-hash"></i> Post #{{ post.id }}
                                        </small>
                                        <div class="mt-2">
                                            <a href="{{ path('app_posts_show', {'id': post.id}) }}" class="btn btn-primary btn-sm">
                                                Lire plus
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <!-- Pagination simple si nécessaire -->
                {% if posts|length > 12 %}
                    <div class="mt-4">
                        <p class="text-muted">Affichage de tous les {{ posts|length }} posts</p>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
