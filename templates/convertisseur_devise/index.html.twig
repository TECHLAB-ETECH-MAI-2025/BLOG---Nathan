                                        <div class="fw-bold">{{ resultat.conversion.fraisBancaires }}%</div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- D√©tails de l'API et Debug -->
                        <div class="card">
                            <div class="card-header">
