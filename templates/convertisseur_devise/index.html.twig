                                    {{ form_row(form.deviseSource, {'attr': {'id': 'devise-source'}}) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_row(form.deviseCible, {'attr': {'id': 'devise-cible'}}) }}
                                </div>
                            </div>
                            
                            <!-- Bouton d'√©change des devises -->
                            <div class="text-center mb-3">
                                <button type="button" id="btn-exchange" class="btn btn-exchange">
                                    <i class="bi bi-arrow-left-right"></i> √âchanger les devises
                                </button>
                            </div>
                            
                            <!-- Avertissement dynamique pour les devises -->
