{% extends 'base.html.twig' %}

{% block title %}Convertisseur de Devises Visa{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .currency-card {
            transition: transform 0.2s;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .currency-card:hover {
            transform: translateY(-2px);
        }
        .result-card {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
        }
        .visa-badge {
            background: linear-gradient(135deg, #1a1f71 0%, #0f4c75 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: bold;
        }
        .exchange-icon {
            font-size: 2rem;
            color: #28a745;
        }
        .api-details {
            background-color: #f8f9fa;
            border-left: 4px solid #007bff;
        }
        
        /* Styles pour le convertisseur */
        .form-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .form-card .card-header {
            background: rgba(255,255,255,0.1);
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }
        
        .form-card .form-control,
        .form-card .form-select {
            background: rgba(255,255,255,0.9);
            border: 1px solid rgba(255,255,255,0.3);
            color: #333;
        }
        
        .form-card .form-control:focus,
        .form-card .form-select:focus {
            background: white;
            border-color: #ffd700;
            box-shadow: 0 0 0 0.2rem rgba(255,215,0,0.25);
        }
        
        .form-card label {
            color: rgba(255,255,255,0.9);
            font-weight: 500;
        }
        
        .form-card .form-text {
            color: rgba(255,255,255,0.7);
        }
        
        .example-conversion {
            cursor: pointer;
            padding: 10px;
            border-radius: 8px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        
        .example-conversion:hover {
            background: rgba(0,123,255,0.1);
            border-color: rgba(0,123,255,0.3);
            transform: translateY(-2px);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #ffd700 0%, #ffb347 100%);
            border: none;
            color: #333;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #ffb347 0%, #ffd700 100%);
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(255,215,0,0.3);
        }
        
        .btn-exchange {
            background: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            border-radius: 50px;
            padding: 8px 16px;
            font-size: 0.9rem;
        }
        
        .btn-exchange:hover {
            background: rgba(255,255,255,0.3);
            color: white;
            transform: rotate(180deg);
            transition: transform 0.3s ease;
        }
    </style>
{% endblock %}

{% block body %}
