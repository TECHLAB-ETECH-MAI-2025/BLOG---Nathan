                                {{ form_row(form.submit) }}
                            </div>
                            
                            {{ form_end(form) }}
                        </div>
                    </div>
                    
                    <!-- Exemples de conversions -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-lightbulb"></i>
