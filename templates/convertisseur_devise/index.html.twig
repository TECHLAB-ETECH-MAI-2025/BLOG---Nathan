                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // √âl√©ments du DOM
            const deviseSource = document.getElementById('devise-source');
            const deviseCible = document.getElementById('devise-cible');
            const warning = document.getElementById('devise-warning');
            const warningText = document.getElementById('warning-text');
            const form = document.getElementById('conversion-form');
            const btnExchange = document.getElementById('btn-exchange');
            const montantInput = document.querySelector('input[name="conversion_devise[montant]"]');
            
            // Devises support√©es par Visa (liste compl√®te)
            const devisesVisa = [
                'USD', 'EUR', 'GBP', 'JPY', 'CAD', 'AUD', 'CHF', 'CNY', 'HKD', 'SGD', 
                'SEK', 'NOK', 'DKK', 'PLN', 'CZK', 'HUF', 'RUB', 'TRY', 'BRL', 'MXN', 
                'ZAR', 'INR', 'KRW', 'THB', 'MYR', 'IDR', 'PHP', 'VND', 'NZD'
            ];
            
            // Fonction pour v√©rifier les devises s√©lectionn√©es
            function checkDevises() {
                if (!deviseSource || !deviseCible) return;
                
                const source = deviseSource.value;
                const cible = deviseCible.value;
                
                if (source && cible) {
                    const sourceVisa = devisesVisa.includes(source);
                    const cibleVisa = devisesVisa.includes(cible);
                    
                    // V√©rifier si les devises sont identiques
                    if (source === cible) {
                        warningText.textContent = 'Les devises source et cible doivent √™tre diff√©rentes.';
                        warning.classList.remove('d-none');
                        warning.className = 'alert alert-danger mb-3';
                        return;
                    }
                    
                    // V√©rifier si une ou les deux devises ne sont pas support√©es par Visa
                    if (!sourceVisa || !cibleVisa) {
                        const nonVisa = [];
                        if (!sourceVisa) nonVisa.push(source);
                        if (!cibleVisa) nonVisa.push(cible);
                        
                        warningText.innerHTML = `
                            <strong>Attention :</strong> ${nonVisa.join(', ')} utilise${nonVisa.length > 1 ? 'nt' : ''} des taux fictifs.<br>
                            <small>L'API Visa n'est pas disponible pour cette${nonVisa.length > 1 ? 's' : ''} devise${nonVisa.length > 1 ? 's' : ''}.</small>
                        `;
                        warning.classList.remove('d-none');
                        warning.className = 'alert alert-warning mb-3';
                    } else {
                        // Toutes les devises sont support√©es par Visa
                        warningText.innerHTML = `
                            <strong>Parfait !</strong> ${source} et ${cible} sont support√©es par l'API Visa.<br>
                            <small>Vous obtiendrez des taux de change officiels en temps r√©el.</small>
                        `;
                        warning.classList.remove('d-none');
                        warning.className = 'alert alert-success mb-3';
                    }
                } else {
                    warning.classList.add('d-none');
                }
            }
            
            // Fonction pour √©changer les devises
            function exchangeDevises() {
                if (!deviseSource || !deviseCible) return;
                
                const temp = deviseSource.value;
                deviseSource.value = deviseCible.value;
                deviseCible.value = temp;
                
                // Animation du bouton
                btnExchange.style.transform = 'rotate(180deg)';
                setTimeout(() => {
                    btnExchange.style.transform = 'rotate(0deg)';
                }, 300);
                
                checkDevises();
            }
            
            // Fonction pour remplir le formulaire avec un exemple
            function fillExample(source, target, amount) {
                if (deviseSource) deviseSource.value = source;
                if (deviseCible) deviseCible.value = target;
                if (montantInput) montantInput.value = amount;
                checkDevises();
                
                // Animation pour attirer l'attention
                form.style.transform = 'scale(1.02)';
                setTimeout(() => {
                    form.style.transform = 'scale(1)';
                }, 200);
            }
            
            // Validation de la date
            function validateDate() {
                const dateInput = document.querySelector('input[name="conversion_devise[dateTransaction]"]');
                if (!dateInput) return;
                
                dateInput.addEventListener('change', function() {
                    const selectedDate = new Date(this.value);
                    const today = new Date();
                    const oneYearAgo = new Date();
                    oneYearAgo.setFullYear(today.getFullYear() - 1);
                    
                    if (selectedDate > today) {
                        alert('‚ö†Ô∏è La date ne peut pas √™tre dans le futur.\nL\'API Visa n\'accepte que les dates pass√©es.');
                        this.value = today.toISOString().split('T')[0];
                    } else if (selectedDate < oneYearAgo) {
                        alert('‚ö†Ô∏è La date ne peut pas √™tre ant√©rieure √† un an.\nUtilisation de la date limite autoris√©e.');
                        this.value = oneYearAgo.toISOString().split('T')[0];
                    }
                });
            }
            
            // Validation du montant
            function validateMontant() {
                if (!montantInput) return;
                
                montantInput.addEventListener('input', function() {
                    const value = parseFloat(this.value);
                    if (value <= 0) {
                        this.setCustomValidity('Le montant doit √™tre sup√©rieur √† 0');
                    } else if (value > 1000000) {
                        this.setCustomValidity('Le montant ne peut pas d√©passer 1 000 000');
                    } else {
                        this.setCustomValidity('');
                    }
                });
            }
            
            // Event listeners
            if (deviseSource) {
                deviseSource.addEventListener('change', checkDevises);
            }
            
            if (deviseCible) {
                deviseCible.addEventListener('change', checkDevises);
            }
            
            if (btnExchange) {
                btnExchange.addEventListener('click', exchangeDevises);
            }
            
            // Exemples de conversion
            document.querySelectorAll('.example-conversion').forEach(example => {
                example.addEventListener('click', function() {
                    const source = this.dataset.source;
                    const target = this.dataset.target;
                    const amount = this.dataset.amount;
                    
                    fillExample(source, target, amount);
                    
                    // Feedback visuel
                    this.style.background = 'rgba(40, 167, 69, 0.2)';
                    setTimeout(() => {
                        this.style.background = '';
                    }, 500);
                });
            });
            
            // Raccourcis clavier
            document.addEventListener('keydown', function(e) {
                // Ctrl + E pour √©changer les devises
                if (e.ctrlKey && e.key === 'e') {
                    e.preventDefault();
                    exchangeDevises();
                }
                
                // Ctrl + Enter pour soumettre le formulaire
                if (e.ctrlKey && e.key === 'Enter') {
                    e.preventDefault();
                    if (form) form.submit();
                }
            });
            
            // Initialisation
            validateDate();
            validateMontant();
            checkDevises(); // V√©rification initiale
            
            // Tooltip pour les raccourcis
            if (btnExchange) {
                btnExchange.title = '√âchanger les devises (Ctrl + E)';
            }
            
            // Animation d'entr√©e
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
            
            // Affichage d'informations utiles dans la console
            console.log('üöÄ Convertisseur de Devises Visa initialis√©');
            console.log('üìã Raccourcis disponibles:');
            console.log('   ‚Ä¢ Ctrl + E : √âchanger les devises');
            console.log('   ‚Ä¢ Ctrl + Enter : Soumettre le formulaire');
            console.log('üí° Devises Visa support√©es:', devisesVisa.length, 'devises');
        });
    </script>
{% endblock %}

