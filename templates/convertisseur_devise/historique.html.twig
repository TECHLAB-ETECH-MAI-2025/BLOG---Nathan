{% extends 'base.html.twig' %}

{% block title %}Historique des Conversions{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- En-tête -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    <i class="bi bi-clock-history text-primary"></i>
                    Historique des Conversions
                </h1>
                <a href="{{ path('app_convertisseur_devise') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvelle Conversion
                </a>
            </div>

            <!-- Navigation -->
            <div class="row mb-4">
                <div class="col-12">
                    <nav class="nav nav-pills nav-fill">
                        <a class="nav-link" href="{{ path('app_convertisseur_devise') }}">
                            <i class="bi bi-calculator"></i> Convertisseur
                        </a>
                        <a class="nav-link active" href="{{ path('app_convertisseur_historique') }}">
                            <i class="bi bi-clock-history"></i> Historique
                        </a>
                    </nav>
                </div>
            </div>

            {% if conversions|length > 0 %}
                <!-- Statistiques rapides -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ conversions|length }}</h5>
                                <p class="card-text">Conversions</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-success">
                                    {% set devises = [] %}
                                    {% for conversion in conversions %}
                                        {% set devises = devises|merge([conversion.deviseSource, conversion.deviseCible]) %}
                                    {% endfor %}
                                    {{ devises|unique|length }}
                                </h5>
                                <p class="card-text">Devises utilisées</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-info">
                                    {% set total = 0 %}
                                    {% for conversion in conversions %}
                                        {% set total = total + conversion.montant %}
                                    {% endfor %}
                                    {{ (total / 1000)|number_format(0, ',', ' ') }}K
                                </h5>
                                <p class="card-text">Volume total</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Visa</h5>
                                <p class="card-text">API utilisée</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Liste des conversions -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Dernières Conversions</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Montant Source</th>
                                        <th>Conversion</th>
                                        <th>Montant Converti</th>
                                        <th>Taux</th>
                                        <th>Frais</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for conversion in conversions %}
                                        <tr>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <span class="fw-bold">{{ conversion.dateTransaction|date('d/m/Y') }}</span>
                                                    <small class="text-muted">{{ conversion.createdAt|date('H:i') }}</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    {{ convertisseur_service.formaterMontant(conversion.montant, conversion.deviseSource) }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-secondary me-1">{{ conversion.deviseSource }}</span>
                                                    <i class="bi bi-arrow-right mx-1"></i>
                                                    <span class="badge bg-secondary ms-1">{{ conversion.deviseCible }}</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    {{ convertisseur_service.formaterMontant(conversion.montantConverti, conversion.deviseCible) }}
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    1 {{ conversion.deviseSource }} = 
                                                    <br>{{ conversion.tauxChange|number_format(6, ',', ' ') }} {{ conversion.deviseCible }}
                                                </small>
                                            </td>
                                            <td>
                                                {% if conversion.fraisBancaires > 0 %}
                                                    <span class="badge bg-warning">{{ conversion.fraisBancaires }}%</span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if app.user and conversion.utilisateur == app.user %}
                                                    <form method="post" action="{{ path('app_convertisseur_supprimer', {'id': conversion.id}) }}" 
                                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette conversion ?')" 
                                                          class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                                
                                                <button class="btn btn-sm btn-outline-info" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#detailModal{{ conversion.id }}">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Modal de détails -->
                                        <div class="modal fade" id="detailModal{{ conversion.id }}" tabindex="-1">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">
                                                            Détails de la Conversion #{{ conversion.id }}
                                                        </h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <h6>Informations de base</h6>
                                                                <table class="table table-sm">
                                                                    <tr>
                                                                        <td><strong>Date transaction:</strong></td>
                                                                        <td>{{ conversion.dateTransaction|date('d/m/Y') }}</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>Date création:</strong></td>
                                                                        <td>{{ conversion.createdAt|date('d/m/Y H:i:s') }}</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>Montant source:</strong></td>
                                                                        <td>{{ convertisseur_service.formaterMontant(conversion.montant, conversion.deviseSource) }}</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>Montant converti:</strong></td>
                                                                        <td>{{ convertisseur_service.formaterMontant(conversion.montantConverti, conversion.deviseCible) }}</td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6>Détails de change</h6>
                                                                <table class="table table-sm">
                                                                    <tr>
                                                                        <td><strong>Devise source:</strong></td>
                                                                        <td><span class="badge bg-primary">{{ conversion.deviseSource }}</span></td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>Devise cible:</strong></td>
                                                                        <td><span class="badge bg-success">{{ conversion.deviseCible }}</span></td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>Taux de change:</strong></td>
                                                                        <td>{{ conversion.tauxChange|number_format(6, ',', ' ') }}</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td><strong>Frais bancaires:</strong></td>
                                                                        <td>
                                                                            {% if conversion.fraisBancaires > 0 %}
                                                                                {{ conversion.fraisBancaires }}%
                                                                            {% else %}
                                                                                Aucun
                                                                            {% endif %}
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="mt-3">
                                                            <h6>Calcul détaillé</h6>
                                                            <div class="alert alert-info">
                                                                <strong>{{ convertisseur_service.formaterMontant(conversion.montant, conversion.deviseSource) }}</strong>
                                                                × {{ conversion.tauxChange|number_format(6, ',', ' ') }}
                                                                {% if conversion.fraisBancaires > 0 %}
                                                                    - {{ conversion.fraisBancaires }}% de frais
                                                                {% endif %}
                                                                = <strong>{{ convertisseur_service.formaterMontant(conversion.montantFinal, conversion.deviseCible) }}</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <!-- Aucune conversion -->
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                        <h4>Aucune conversion trouvée</h4>
                        <p class="text-muted">Vous n'avez pas encore effectué de conversion de devises.</p>
                        <a href="{{ path('app_convertisseur_devise') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Effectuer ma première conversion
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
